{
  "name": "eden-sim-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:esbuild": "node esbuild.config.js",
    "build:esbuild:watch": "node esbuild.config.js --watch",
    "dev": "npm run build && electron .",
    "dev:esbuild": "npm run build:esbuild && electron .",
    "dist:win": "npm run build && electron-builder --win --x64"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.19.0",
    "glob": "^10.3.10",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.eden.sim.desktop",
    "productName": "Eden Simulator",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "renderer/**"
    ],
    "extraResources": [
      {
        "from": "../server/dist",
        "to": "server/dist"
      },
      {
        "from": "../server/data",
        "to": "server/dist/data"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}


